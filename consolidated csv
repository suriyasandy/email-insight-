import pandas as pd
import glob

# path to your csv files
csv_files = glob.glob("path/to/csv_folder/*.csv")

# Create Excel writer
with pd.ExcelWriter("consolidated.xlsx", engine="xlsxwriter") as writer:
    for file in csv_files:
        # Read each CSV
        df = pd.read_csv(file)
        
        # Use file name (without extension) as sheet name
        sheet_name = file.split("/")[-1].replace(".csv", "")
        
        # Write to Excel sheet
        df.to_excel(writer, sheet_name=sheet_name, index=False)

print("âœ… Consolidated Excel file created successfully!")
